---
export const prerender = true;

/**
 * 404 Error Page
 *
 * Custom page for not found errors with:
 * - Large 404 heading
 * - Helpful error message
 * - Quick links to main sections
 */

import { getPodcast, getTheme } from '@rejected-media/podcast-framework-core';
import BaseLayout from '../layouts/BaseLayout.astro';

const podcastInfo = await getPodcast();
const theme = await getTheme();
const siteName = podcastInfo?.name || "Podcast";
---

<BaseLayout
  title={`Page Not Found - ${siteName}`}
  description="The page you're looking for doesn't exist."
  podcastInfo={podcastInfo}
  theme={theme}
>
  <main class="max-w-4xl mx-auto px-4 py-20 flex-grow text-center">
    <!-- 404 Content -->
    <div class="mb-8">
      <h1 class="text-9xl font-bold text-blue-600 mb-4">404</h1>
      <h2 class="text-3xl font-semibold text-gray-900 mb-4">Page Not Found</h2>
      <p class="text-lg text-gray-600 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
    </div>

    <!-- Helpful Links -->
    <div class="bg-white rounded-lg shadow-sm p-8 inline-block">
      <h3 class="text-xl font-semibold text-gray-900 mb-4">Try these instead:</h3>
      <div class="flex flex-col gap-3 text-left">
        <a href="/" class="text-blue-600 hover:text-blue-700 font-medium flex items-center gap-2">
          <span>→</span>
          <span>Homepage</span>
        </a>
        <a href="/episodes" class="text-blue-600 hover:text-blue-700 font-medium flex items-center gap-2">
          <span>→</span>
          <span>Browse Episodes</span>
        </a>
        <a href="/guests" class="text-blue-600 hover:text-blue-700 font-medium flex items-center gap-2">
          <span>→</span>
          <span>All Guests</span>
        </a>
        <a href="/about" class="text-blue-600 hover:text-blue-700 font-medium flex items-center gap-2">
          <span>→</span>
          <span>About the Show</span>
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
