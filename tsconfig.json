{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // Module resolution (required for Astro + framework compatibility)
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",

    // JSX configuration for React components (Sanity Studio)
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    // Type checking
    "skipLibCheck": true,
    "strict": true,

    // Path aliases for cleaner imports
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@config": ["./podcast.config.js"]
    }
  },
  "include": [
    "src/**/*",
    "sanity/**/*",
    ".astro/**/*",
    "podcast.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".astro"
  ]
}
